<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space5dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:id="@+id/saving_typeTV"
            android:padding="@dimen/space2dp"
            android:text="saving type"
            android:textColor="@color/colorTextView"
            android:textSize="@dimen/text_size_15SP"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/entered_saving_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_weight=".9"
            android:maxLength="4"
            android:inputType="number"
            android:gravity="center"
            android:padding="@dimen/space2dp"
            android:text="54"
            android:textColor="@color/colourBtnBlueBackground"
            android:textSize="@dimen/text_size_15SP"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>