<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space2dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="7dp"
        card_view:strokeColor="@color/button_light_green"
        card_view:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shgName_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:padding="@dimen/dimen_2"
                android:text="Shg Name"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/text_size_20SP"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shgCode_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginTop="@dimen/space3dp"
                android:padding="@dimen/dimen_2"
                android:text="shg Code(112200333)" />

            <TextView
                android:id="@+id/totalMember_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_10"
                android:padding="@dimen/dimen_2"
                android:text="Total Number of Member: 10"
                android:textSize="@dimen/text_size_15SP" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/setting_Btn"
                style="@style/TextButtonButton"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:backgroundTint="@color/button_light_green"
                android:text="Add"
                android:textColor="@color/button_text_green" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>