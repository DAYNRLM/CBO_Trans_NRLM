<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space2dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="7dp"
        card_view:strokeColor="@color/button_light_green"
        card_view:strokeWidth="2dp">

        <LinearLayout
            android:layout_margin="@dimen/space3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shgMember_Tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:padding="@dimen/dimen_2"
                    android:text="Baldav swami"
                    android:textColor="@color/textBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/memberDetail_Tv"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:padding="@dimen/dimen_2"
                    android:text="Baldav swami"
                    android:textColor="@color/textBlack" />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <TextView
                      android:id="@+id/memberSubCategory_Tv"
                      android:layout_weight="1"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dimen_5"
                      android:padding="@dimen/dimen_2"
                      android:text="Baldav swami"
                      android:gravity="center_horizontal"
                      android:textColor="@color/colorWhite"
                      android:background="@color/colourTitleBlueBackground"/>

              </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

</LinearLayout>