<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen_10"
    android:translationZ="@dimen/dimen_10"
    android:elevation="@dimen/dimen_10"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/add_receiptLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/added_reciept_spinner1"
                style="@style/CustomSpinner"

                android:textColorHint="@color/colourBtnBlueBackground"
                android:hint="@string/reciept_type_MBS_hint"
                />
            <Spinner
                android:id="@+id/added_reciept_spinner2"
                style="@style/CustomSpinner"
                android:textColorHint="@color/colourBtnBlueBackground"
                android:hint="@string/reciept_type_MBS_hint"
                />
            <Spinner
                android:id="@+id/added_reciept_spinner3"
                style="@style/CustomSpinner"
                android:textColorHint="@color/colourBtnBlueBackground"
                android:hint="@string/reciept_type_MBS_hint"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/text1CV"
                android:backgroundTint="@color/colorWhite"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                app:cardCornerRadius="@dimen/dimen_10"
                android:elevation="@dimen/dimen_10"
                android:translationZ="@dimen/dimen_5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5"
                    android:id="@+id/text_label1"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_horizontal"
                    android:textSize="@dimen/dimen_15"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="text_label1"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginBottom="@dimen/dimen_5"
                    app:cardCornerRadius="@dimen/dimen_10"
                    android:elevation="@dimen/dimen_10"
                    >

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:id="@+id/text_data_label1"
                        android:background="@color/colorPrimaryDark"
                        android:textSize="@dimen/dimen_15"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:text="text_data_label1"/>


                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:weightSum="2"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dimen_2"
                    android:id="@+id/edit_textTIL1"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="XXXXX">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_textTIET1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:textColor="@color/textBlack"
                        android:textColorHint="@color/colourBtnBlueBackground"
                        android:textSize="@dimen/dimen_15" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2"
                    android:id="@+id/edit_textTIL2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_weight="1"
                    android:hint="yyyyy">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_textTIET2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:textColor="@color/textBlack"
                        android:textColorHint="@color/colourBtnBlueBackground"
                        android:textSize="@dimen/dimen_15" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:weightSum="2"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dimen_2"
                    android:id="@+id/edit_textTIL3"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="edit_textTIET3">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_textTIET3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:textColor="@color/textBlack"
                   android:textColorHint="@color/colourBtnBlueBackground"
                        android:textSize="@dimen/dimen_15" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2"
                    android:id="@+id/edit_textTIL4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_weight="1"
                    android:hint="edit_textTIET4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_textTIET4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:textColor="@color/textBlack"
                        android:textColorHint="@color/colourBtnBlueBackground"
                        android:textSize="@dimen/dimen_15" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/text2CV"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginTop="@dimen/dimen_10"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                app:cardCornerRadius="@dimen/dimen_10"
                android:elevation="@dimen/dimen_10"
                android:translationZ="@dimen/dimen_5"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5"
                    android:layout_gravity="left|center_vertical"
                    android:id="@+id/text_label2"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/dimen_15"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="text_label1"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginBottom="@dimen/dimen_5"
                    app:cardCornerRadius="@dimen/dimen_10"
                    android:elevation="@dimen/dimen_10"
                    >

                    <TextView
                        android:id="@+id/text_data_label2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="text_data_label2"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/added_receipt_date_LL"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dimen_10"
                android:layout_weight="1"
                android:weightSum="2"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center|left"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginTop="@dimen/dimen_5"
                    app:cardCornerRadius="@dimen/dimen_5"
                    android:elevation="@dimen/dimen_5"
                    android:translationZ="@dimen/dimen_5"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_30"
                        android:id="@+id/added_receipt_date_TV"
                        android:background="@color/colorPrimaryDark"
                        android:textSize="@dimen/dimen_15"
                        android:gravity="center"
                        android:hint="@string/loan_sncsn_date"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_weight="1.5"
                    android:layout_gravity="right|center"
                    android:id="@+id/add_receipt_calanderIV"
                    android:src="@drawable/calendar_icon"/>

            </LinearLayout>

            <Spinner
                android:id="@+id/added_reciept_trans_mode"
                style="@style/CustomSpinner"
                android:textColorHint="@color/colourBtnBlueBackground"
                android:hint="@string/reciept_type_MBS_hint"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dimen_10"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:elevation="@dimen/dimen_10"
                    android:translationZ="@dimen/dimen_10"
                    app:cardCornerRadius="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/cancelTV"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="@string/cancel"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:elevation="@dimen/dimen_10"
                    android:translationZ="@dimen/dimen_10"
                    app:cardCornerRadius="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/submitTV"
                        android:layout_width="@dimen/dimen_100"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="@string/submit"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />


                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>