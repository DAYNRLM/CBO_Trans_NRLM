<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.Activities.MemberSavingActivity"
    tools:showIn="@layout/activity_member_saving">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/viewline"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            app:cardCornerRadius="@dimen/dimen_10"
            android:elevation="@dimen/dimen_10"
            android:translationZ="@dimen/dimen_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:id="@+id/shg_nameTV"
                android:gravity="top"
                android:textSize="@dimen/dimen_15"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="Jagpal Daiv SHG "/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            app:cardCornerRadius="@dimen/dimen_10"
            android:elevation="@dimen/dimen_10"
            >

            <TextView
                android:layout_width="@dimen/dimen_100"
                android:layout_height="match_parent"
                android:id="@+id/shg_codeTV"
                android:background="@color/colorPrimaryDark"
                android:textSize="@dimen/dimen_15"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="125632"/>


        </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            app:cardCornerRadius="@dimen/dimen_10"
            android:elevation="@dimen/dimen_10"
            android:translationZ="@dimen/dimen_5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="@dimen/dimen_5"
                android:gravity="top"
                android:text="@string/last_meeting_date"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dimen_15"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_5"
                app:cardCornerRadius="@dimen/dimen_10">

                <TextView
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="match_parent"
                    android:id="@+id/last_meeting_dateTV"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_15"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="15-12-2020"/>


            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            app:cardCornerRadius="@dimen/dimen_10"
            android:elevation="@dimen/dimen_10"
            android:translationZ="@dimen/dimen_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:gravity="top"
                android:textSize="@dimen/dimen_15"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="@string/meeting_number"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_5"
                app:cardCornerRadius="@dimen/dimen_10">

                <TextView
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="match_parent"
                    android:id="@+id/meeting_noTV"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_15"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="05"/>


            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            app:cardCornerRadius="@dimen/dimen_10"
            android:elevation="@dimen/dimen_10"
            android:translationZ="@dimen/dimen_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:gravity="top"
                android:textSize="@dimen/dimen_15"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="@string/cashbook_no"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_5"
                app:cardCornerRadius="@dimen/dimen_10">

                <TextView
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="match_parent"
                    android:id="@+id/cash_book_noTV"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_15"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="05"/>


            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            app:cardCornerRadius="@dimen/dimen_10"
            android:elevation="@dimen/dimen_10"
            android:translationZ="@dimen/dimen_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:gravity="top"
                android:textSize="@dimen/dimen_15"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="@string/cashbook_page_no"/>


            <EditText
                android:id="@+id/cash_book_page_noTV"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space5dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_gravity="right"
                android:maxLength="3"
                android:inputType="number"
                android:gravity="center"
                android:padding="@dimen/space2dp"
                android:textColor="@color/colourBtnBlueBackground"
                android:textSize="@dimen/text_size_15SP"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space2dp"
            android:layout_marginBottom="@dimen/space2dp"
            android:background="@color/colorPrimaryDark" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/no_member_foundTV"
                android:layout_marginTop="@dimen/dimen_50"
                android:layout_marginBottom="@dimen/dimen_50"
                android:text="@string/no_member_found"
                android:textSize="@dimen/dimen_20"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:textColor="@color/button_background_red"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/member_savingRV"/>
        </RelativeLayout>



  <!--      <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text" />
-->
    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/viewline"
        android:layout_above="@+id/bottomRL"
        android:layout_marginTop="@dimen/space2dp"
        android:layout_marginBottom="@dimen/space2dp"
        android:background="@color/colorPrimaryDark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomRL"
        android:layout_alignParentBottom="true"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_10"
            app:cardCornerRadius="@dimen/dimen_10"
            android:elevation="@dimen/dimen_10"
            android:translationZ="@dimen/dimen_10"
            >

            <TextView
                android:layout_width="@dimen/dimen_100"
                android:layout_height="match_parent"
                android:id="@+id/backTV"
                android:background="@color/colorPrimaryDark"
                android:textSize="@dimen/dimen_15"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="@string/back"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_10"
            app:cardCornerRadius="@dimen/dimen_10"
            android:elevation="@dimen/dimen_10"
            android:translationZ="@dimen/dimen_10"
            >

            <TextView
                android:layout_width="@dimen/dimen_100"
                android:layout_height="match_parent"
                android:id="@+id/submitTV"
                android:background="@color/colorPrimaryDark"
                android:textSize="@dimen/dimen_15"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="@string/submit"/>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <!--  <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                app:cardCornerRadius="@dimen/dimen_10">


            </androidx.cardview.widget.CardView>-->
</RelativeLayout>