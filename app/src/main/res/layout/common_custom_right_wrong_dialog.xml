<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space5dp"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardElevation="7dp"
        card_view:strokeColor="@color/colourTitleBlueBackground"
        card_view:cardCornerRadius="@dimen/space5dp"
        card_view:strokeWidth="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space5dp"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardElevation="7dp"
                    card_view:strokeColor="@color/shrine_red"
                    card_view:cardCornerRadius="100dp"
                    card_view:strokeWidth="2dp">
                    <ImageView
                        android:layout_margin="@dimen/space5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:tint="@color/shrine_red"
                        android:src="@drawable/met_ic_close"/>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <TextView
                android:id="@+id/dialogTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meeting till date should be less then or equal to: "
                android:textColor="@color/textBlack"
                android:gravity="center_horizontal"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/dimen_20"
                android:layout_marginTop="@dimen/space10dp"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"/>


            <TextView
                android:id="@+id/dialogCheckFieldTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_15"
                android:text="Please check the field "/>


            <LinearLayout
                android:id="@+id/botemBtnLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

               <!-- <com.google.android.material.button.MaterialButton
                    android:id="@+id/cutoffBackBtn"
                    style="@style/TextButtonButton"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:backgroundTint="@color/shgCutoffBack"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Back"
                    android:textColor="@color/colorWhite" />-->




                <com.google.android.material.button.MaterialButton
                    android:id="@+id/closeBtn"
                    style="@style/TextButtonButton"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:backgroundTint="@color/colourTitleBlueBackground"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Close"
                    android:textColor="@color/colorWhite" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/okBtn"
                    style="@style/TextButtonButton"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:backgroundTint="@color/button_background_red"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Ok"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>

        </LinearLayout>




    </com.google.android.material.card.MaterialCardView>


</LinearLayout>