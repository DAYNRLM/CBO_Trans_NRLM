<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recyclerviewCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space3dp"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardElevation="7dp"
        card_view:strokeColor="@color/colourTitleBlueBackground"
        card_view:strokeWidth="1.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space3dp"
                    android:layout_weight="1.2"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardElevation="7dp"
                    card_view:strokeColor="@color/delete_btn_background"
                    card_view:strokeWidth="1dp">

                    <TextView
                        android:id="@+id/loanDetailTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="@dimen/dimen_2"
                        android:text="hiiiiii" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space3dp"
                    android:layout_weight="0.8"
                    card_view:cardBackgroundColor="@color/colorWhite"
                    card_view:cardElevation="7dp"
                    card_view:strokeColor="@color/delete_btn_background"
                    card_view:strokeWidth="1dp">

                    <TextView
                        android:id="@+id/overDueDetailTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="@dimen/dimen_2"
                        android:text="hiiiiii" />

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space3dp"
                card_view:cardBackgroundColor="@color/colorWhite"
                card_view:cardElevation="7dp"
                card_view:strokeColor="@color/delete_btn_background"
                card_view:strokeWidth="1dp">

                <TextView
                    android:id="@+id/intrestDetailTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="@dimen/dimen_2"
                    android:text="hiiiiii" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space3dp"
                card_view:cardBackgroundColor="@color/colorWhite"
                card_view:cardElevation="7dp"
                card_view:strokeColor="@color/delete_btn_background"
                card_view:strokeWidth="1dp">

                <TextView
                    android:id="@+id/bankDetailTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="@dimen/dimen_2"
                    android:text="hiiiiii" />

            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteBtn"
                    style="@style/TextButtonButton"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:backgroundTint="@color/button_background_red"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Delete"
                    android:textColor="@color/colorWhite" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editBtn"
                    style="@style/TextButtonButton"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/colourTitleBlueBackground"
                    android:fontFamily="@font/roboto_bold"
                    android:text="edit"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>