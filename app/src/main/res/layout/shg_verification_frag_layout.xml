<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <!-- <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/space3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--shg information layout-->
            <TextView
                style="@style/TitleTextViewTheme"
                android:layout_margin="@dimen/space3dp"
                android:text="SHG Information"
                android:padding="@dimen/space2dp"
                android:textSize="@dimen/dimen_15"
                android:background="@color/colourTitleBlueBackground"/>
            <com.google.android.material.card.MaterialCardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space3dp"
                card_view:cardElevation="7dp"
                card_view:strokeColor="@color/gray_background"
                card_view:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginRight="@dimen/space3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:padding="@dimen/dimen_2"
                            android:text="Shg Name:"
                            android:textColor="@color/textBlack" />

                        <TextView
                            android:layout_weight="0.5"
                            android:id="@+id/shgName_Tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen_10"
                            android:text="Bala ji self help group"
                            android:background="@color/gray_background"
                            android:textColor="@color/blue_text"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginRight="@dimen/space3dp"
                            android:weightSum="2">
                            <TextView
                                android:layout_weight="0.9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_5"
                                android:padding="@dimen/dimen_2"
                                android:text="SHG Type:"
                                android:textColor="@color/textBlack" />

                            <TextView
                                android:layout_weight="1.1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dimen_10"
                                android:text="New"
                                android:gravity="center_horizontal"
                                android:background="@color/gray_background"
                                android:textColor="@color/blue_text"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginRight="@dimen/space3dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_weight="0.8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_5"
                                android:padding="@dimen/dimen_2"
                                android:text="Permoted By:"
                                android:textColor="@color/textBlack" />

                            <TextView
                                android:layout_weight="1.2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dimen_10"
                                android:gravity="center_horizontal"
                                android:text="NRLM"
                                android:background="@color/gray_background"
                                android:textColor="@color/blue_text"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space3dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_weight="1.3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:padding="@dimen/dimen_2"
                            android:text="Formation date:"
                            android:textColor="@color/textBlack" />

                        <TextView
                            android:layout_weight="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen_10"
                            android:text="10-12-2020"
                            android:gravity="center_horizontal"
                            android:background="@color/gray_background"
                            android:textColor="@color/blue_text"
                            android:textStyle="bold" />
                    </LinearLayout>







                </LinearLayout>





            </com.google.android.material.card.MaterialCardView>
            <!--end shg information layout-->


            <!--shg member bank detail layout-->
            <TextView
                style="@style/TitleTextViewTheme"
                android:layout_margin="@dimen/space3dp"
                android:textSize="@dimen/dimen_15"
                android:text="Bank Details"
                android:padding="@dimen/space2dp"
                android:background="@color/colourTitleBlueBackground"/>
            <com.google.android.material.card.MaterialCardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space3dp"
                card_view:cardElevation="7dp"
                card_view:strokeColor="@color/gray_background"
                card_view:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginRight="@dimen/space3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:padding="@dimen/dimen_2"
                            android:text="Bank Name:"
                            android:textColor="@color/textBlack" />

                        <TextView
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen_10"
                            android:text="Punjab National Bank"
                            android:gravity="center_horizontal"
                            android:background="@color/gray_background"
                            android:textColor="@color/blue_text"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space3dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_weight="1.3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:padding="@dimen/dimen_2"
                            android:text="Account Number:"
                            android:textColor="@color/textBlack" />

                        <TextView
                            android:layout_weight="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen_10"
                            android:text="**********9876"
                            android:gravity="center_horizontal"
                            android:background="@color/gray_background"
                            android:textColor="@color/blue_text"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space3dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:padding="@dimen/dimen_2"
                            android:text="Bank Branch Name:"
                            android:textColor="@color/textBlack" />

                        <TextView
                            android:layout_weight="0.8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen_10"
                            android:text="Kohand"
                            android:gravity="center_horizontal"
                            android:background="@color/gray_background"
                            android:textColor="@color/blue_text"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space3dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:padding="@dimen/dimen_2"
                            android:text="Opening Date of Account:"
                            android:textColor="@color/textBlack" />

                        <TextView
                            android:layout_weight="1.1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen_10"
                            android:text="16-10-2020"
                            android:gravity="center_horizontal"
                            android:background="@color/gray_background"
                            android:textColor="@color/blue_text"
                            android:textStyle="bold" />
                    </LinearLayout>









                </LinearLayout>





            </com.google.android.material.card.MaterialCardView>
            <!--eng bank detail layout-->


            <!--member detail layout-->
            <TextView
                style="@style/TitleTextViewTheme"
                android:layout_margin="@dimen/space3dp"
                android:textSize="@dimen/dimen_15"
                android:text="SHG Member Details"
                android:padding="@dimen/space2dp"
                android:background="@color/colourTitleBlueBackground"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commonRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space5dp"
                android:padding="@dimen/space2dp" />
            <!--end member details layout-->


            <!--button layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/vrfiRejectBtn"
                    style="@style/TextButtonButton"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:backgroundTint="@color/button_background_red"
                    android:text="Reject"
                    android:textColor="@color/colorWhite" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/vrfiAcceptBtn"
                    style="@style/TextButtonButton"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:backgroundTint="@color/colourTitleBlueBackground"
                    android:text="Accept"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
            <!--end button layout-->


        </LinearLayout>
    </ScrollView>
</LinearLayout>