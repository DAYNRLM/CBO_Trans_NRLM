<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/navigation_header_gradien"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_5"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dimen_15"
            android:layout_height="@dimen/dimen_30"
            android:scaleType="fitStart"
            android:src="@drawable/nic" />
        <TextView
            android:id="@+id/tvUserName"
            style="@style/BlackTextForTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:gravity="start"
            android:text="@string/name_abc"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvUserMobileNumber"
            style="@style/BlackTextForTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:gravity="start"
            android:text="9812343583"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppVersion"
            style="@style/BlackTextForTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:gravity="start"
            android:text="version1.0.0"
            android:textSize="@dimen/text_size_15SP"
            android:textStyle="bold" />
       <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2"
            android:layout_marginBottom="@dimen/dimen_2"
            android:background="@color/colorAccent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="@dimen/dimen_5"
            android:layout_marginTop="@dimen/space2dp"
            android:layout_marginBottom="@dimen/space2dp"
            android:background="#000000" />
    </LinearLayout>

</LinearLayout>